{
  "name": "vspeech_searcher",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "python build.py"
  },
  "build": {
    "appId": "com.vspeech.searcher",
    "productName": "VSpeech Searcher",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "frontend/**/*",
      "dist/**/*"
    ],
    "extraResources": [
      {
        "from": "dist/",
        "to": "app/dist/",
        "filter": ["**/*"]
      }
    ]
  },
  "devDependencies": {
    "electron": "28.0.0",
    "electron-builder": "^24.0.0"
  }
}
